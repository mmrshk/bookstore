%main.container
  #slider.carousel.slide{"data-ride" => "carousel"}
    %ol.carousel-indicators
      - @latest_books.each_with_index do |book, index|
        %li{:class => "if index == 0 active", "data-slide-to" => "index", "data-target" => "#slider"}
    .carousel-inner{:role => "listbox"}
      - @latest_books.each_with_index do |book, index|
        %div{:class => "if index == 0  active  item"}
          .row
            .col-sm-5
              .general-img-wrap
                %img.img-shadow.general-thumbnail-img{:alt => "design-book", :src => "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg"}/
            .col-sm-7
              .mb-60
                %h1= book.title
                %p.lead= book.description
                %p.lead.small
                  - book.authors.each do |author|
                    - author.firstname
                    - author.lastname
                .general-align
                  %button.btn.btn-primary Buy Now
    %a.left.carousel-control{"data-slide" => "prev", :href => "#slider", :role => "button"}
      %span.icon-prev{"aria-hidden" => "true"}
      %span.sr-only Previous
    %a.right.carousel-control{"data-slide" => "next", :href => "#slider", :role => "button"}
      %span.icon-next{"aria-hidden" => "true"}
      %span.sr-only Next
.container
  .jumbot.text-center.mb-0
    %h2.h1 Welcome to our amazing Bookstore!
    .mb-res-50
      %p We pore through hundreds of new books each month and select the five best we can find to share with our members.
    = link_to "Get Started", categories_path, class:"btn btn-default"
  .mb-35
    %h3 Best Sellers
    .row
      .col-sm-6.col-md-3
        .general-thumb-wrap
          .thumbnail-main.general-thumbnail
            %img.img-shadow.general-thumbnail-img{:alt => "design-book", :src => "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg"}/
            .thumb-hover
              .general-thumb-link-wrap
                %a.thumb-hover-link{:href => "#"}
                  %i.fa.fa-eye.thumb-icon{"aria-hidden" => "true"}
                %a.thumb-hover-link{:href => "#"}
                  %i.fa.fa-shopping-cart.thumb-icon
