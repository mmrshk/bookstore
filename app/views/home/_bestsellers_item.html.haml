.col-sm-6.col-md-3
  %p.lead.small= book.category.title
  .general-thumb-wrap
    .thumbnail.general-thumbnail
      = link_to book.image.url do
        = image_tag book.image.url, class: "img-shadow general-thumbnail-img", alt: "design-book"
      .thumb-hover
        .general-thumb-link-wrap
          %a.thumb-hover-link{href: book_path(book)}
            %i.fa.fa-eye.thumb-icon.pt-10{'aria-hidden': "true"}
          %a.thumb-hover-link{href: "", onclick: "$(this).siblings('form').submit()"}
            %i.fa.fa-shopping-cart.thumb-icon.pt-10
          = form_for LineItem.new, method: :post do |form|
            = form.hidden_field :book_id, value: book.id
            = form.hidden_field :quantity, value: 1
  .mb-35
    .clearfix
      %p.pull-right.font-16.in-gold-500= number_to_euro book.price
      %p.title.mr-55= book.title
    %span.divider-sm
    %p.lead.small= book_authors(book)
