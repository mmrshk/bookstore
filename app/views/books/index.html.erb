<main class="container">
  <div id="slider" data-ride="carousel" class="carousel slide">
      <ol class="carousel-indicators">
        <% @latest_books.each_with_index do |book, index| %>
        <li data-target="#slider" data-slide-to="<% index %>" class="<% if index == 0 %>active <% end %>"></li>
        <% end %>
      </ol>
    <div role="listbox" class="carousel-inner">
      <% @latest_books.each_with_index do |book, index| %>
        <div class="<% if index == 0 %> active <% end %> item">
          <div class="row">
            <div class="col-sm-5">
              <div class="general-img-wrap">
                <img src="http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg" alt="design-book" class="img-shadow general-thumbnail-img" /></div>
            </div>
            <div class="col-sm-7">
              <div class="mb-60">
                <h1><%= book.title %></h1>
                <p class="lead"><%= book.description %></p>
                <p class="lead small"><% book.authors.each do |author| %> <% author.firstname %> <% author.lastname %> <% end %></p>
                <div class="general-align">
                  <button class="btn btn-primary">Buy Now</button></div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <a href="#slider" role="button" data-slide="prev" class="left carousel-control">
      <span aria-hidden="true" class="icon-prev"></span>
      <span class="sr-only">Previous</span></a>
    <a href="#slider" role="button" data-slide="next" class="right carousel-control">
      <span aria-hidden="true" class="icon-next"></span>
      <span class="sr-only">Next</span></a>
  </div>
</main>

