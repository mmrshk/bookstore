<%= simple_form_for @book, html: { multipart: true } do |f| %>
  <%= select_tag(:category_id, options_for_select(@categories), prompt: "Select a category") %>
  <%= select_tag(:author_ids, options_for_select(@author), prompt: "Select an Author") %>
  <%= f.input :title, label: "Book title " %>
  <%= f.input :description, label: "Description " %>
  <%= f.input :price, label: "Price "%>
  <%= f.input :quantity, label: "Quantity " %>
  <%= f.input :year, label: "Year of publication " %>
  <%= f.input :dimension_h, label: "Dimension(height) " %>
  <%= f.input :dimension_w, label: "Dimension(weight) " %>
  <%= f.input :dimension_d, label: "Dimension(depth) " %>
  <%= f.input :material, label: "Material " %>
  <%= f.button :submit %>
<% end %>
