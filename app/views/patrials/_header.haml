%body
  %header.navbar.navbar-default{:style => "background-color: #ffffff;"}
    .container
      .navbar-header
        %button.navbar-toggle.pull-left{"data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        = link_to "Bookstore", root_path, class: "navbar-brand"
      = link_to cart_path, class:"shop-link pull-right hidden-xs" do
        %span.shop-icon
          %span.shop-quantity= cart_items_count
      #navbar.navbar-collapse.collapse.pl-30.pd-1{"aria-expanded" => "false"}
        .visible-xs
          %button.close{"aria-label" => "Close", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
          %ul.nav.navbar-nav.navbar-right
            %li= link_to "Home", root_path
            %li
              %a{"aria-controls" => "menu", "aria-expanded" => "false", "data-toggle" => "collapse", :href => "#menu", :type => "button"} Shop
              %ul#menu.collapse.list-unstyled-none.mb-10.pl-30{"aria-expanded" => "false"}
                - Category.all.each do |category|
                  %li{:class => "#{'active' if params[:category] == category.title}"}
                    = link_to category.title, categories_path(category: category.title), class: "collapse-link"
            - if user_signed_in?
              %li
                %a.collapse{"aria-controls" => "account", "aria-expanded" => "false", "data-toggle" => "collapse", :href => "#account", :type => "button"} My account
                %ul#account.collapse.list-unstyled-none.mb-10.pl-30{"aria-expanded" => "false"}
                  %li
                    = link_to "Orders", orders_path
                  %li
                    = link_to "Settings", edit_user_registration_path, class: "collapse-link"
              %li= link_to "Log out", destroy_user_session_path, method: :delete
            - else
              %li= link_to "Log in", new_user_session_path
              %li= link_to "Sign up", new_user_registration_path
        .hidden-xs
          %ul.nav.navbar-nav.navbar-right
            %li= link_to "Home", root_path
            %li.dropdown
              %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"} Shop
              %ul.dropdown-menu{:role => "menu"}
                - Category.all.each do |category|
                  %li{:class => "#{'active' if params[:category] == category.title}"}
                    = link_to category.title, categories_path(category: category.title), class: "collapse-link"
            - if user_signed_in?
              %li
                %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"} My account
                %ul.dropdown-menu{:role => "menu"}
                  %li
                    = link_to "Orders", orders_path
                  %li
                    = link_to "Settings", edit_user_registration_path
                  %li.divider{:role => "separator"}
                  %li= link_to "Log out", destroy_user_session_path, method: :delete
            - else
              %li= link_to "Log in", new_user_session_path
              %li= link_to "Sign up", new_user_registration_path
