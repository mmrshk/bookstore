%footer.navbar-inverse
  .container
    .row
      .col-sm-9
        %ul.list-inline.mb-25
          %li
            = link_to I18n.t('views.pages.home'), root_path, class:"nav-link"
          - if user_signed_in?
            %li
              %a.nav-link
                = link_to I18n.t('views.pages.orders'), orders_path, class:"nav-link"
            %li
              = link_to I18n.t('views.pages.settings'), edit_user_registration_path, class: "nav-link"
          - else
            %li
              = link_to I18n.t('views.pages.login'), new_user_session_path, class:"nav-link"
            %li
              = link_to I18n.t('views.pages.signup'), new_user_registration_path, class:"nav-link"
      .col-sm-3
        %p.general-nav-mail
          = I18n.t('views.pages.support')
        %p.general-nav-number
          = I18n.t('views.pages.number')
        %ul.list-inline.general-align.mb-25
          %li
            %a.nav-link{ href: "#"}
              %i.fa.fa-facebook{"aria-hidden" => "true"}
          %li
            %a.nav-link{ href: "#"}
              %i.fa.fa-twitter{"aria-hidden" => "true"}
          %li
            %a.nav-link{ href: "#"}
              %i.fa.fa-google-plus{"aria-hidden" => "true"}
          %li
            %a.nav-link{ href: "#"}
              %i.fa.fa-instagram{"aria-hidden" => "true"}
