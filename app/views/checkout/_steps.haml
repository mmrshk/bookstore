%ul.steps.list-inline
  - wizard_steps[1,5].each_with_index do |step, index|
    %li.step{ class: future_step?(step) ? '' : 'active'}
      = link_to wizard_path(step), class: 'step-link' do
        %span.step-number
          = index + 1 if !past_step?(step)
          - if past_step?(step)
            %i.fa.fa-check.step-icon
        %span.step-text.hidden-xs
          = step.capitalize
    - if step != :complete
      %li.step-divider
