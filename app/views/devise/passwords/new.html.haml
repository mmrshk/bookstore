%main.container.general-main-wrap
  .text-center
    %h1.mb-30
      = I18n.t('devise.passwords.forgot_password')
    %p.general-password-text
      = I18n.t('devise.passwords.instructions')
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "general-form" }) do |f|
    = devise_error_messages!
    .form-group.mb-25
      = f.email_field :email, placeholder: I18n.t('devise.passwords.enter_email'), class: "form-control"
    .actions
      = f.submit I18n.t('devise.passwords.email_instructions'), class: "btn btn-default center-block mb-20",  id: 'reset-btn'
    .text-center
      %a.in-gold-500.mb-20{ href: root_path }
        = I18n.t('devise.passwords.cancel')
