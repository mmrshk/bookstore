.row.mb-60
  .col-sm-5
    %p.in-gold-500.font-18.mb-25
      = I18n.t('devise.registrations.email')
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, id: 'email' }, class: "general-form-md") do |f|
      = f.error_notification
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %p
          = I18n.t('devise.registrations.waiting_confirmation', email: resource.unconfirmed_email)
      .form-group.mb-35
        = f.input :email, required: true, autofocus: true, placeholder: I18n.t('devise.registrations.enter_email'), type: "email", class:"form-control", label:false, name: "email"
        .general-text-align
          = f.button :submit, I18n.t('devise.registrations.save'), class:"btn btn-default mb-35"
  .col-sm-5.col-sm-offset-1
    %p.in-gold-500.font-18.mb-25
      = I18n.t('devise.registrations.password')
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, id: 'change_password_form' }, class:"general-form-md divider-lg-bottom pb-25") do |f|
      = f.error_notification
      .form-group.mb-30
        %label.control-label.input-label{ for: "oldPassword"}
          = I18n.t('devise.registrations.old_password')
        = f.input :current_password, class: "form-control", placeholder: = I18n.t('devise.registrations.old_password'), required: true, type: "password", input_html: { autocomplete: "current-password" }
      .form-group.mb-30
        %label.control-label.input-label{ for: "password"}
          = I18n.t('devise.registrations.new_password')
        = f.input :password, type:"password", placeholder: I18n.t('devise.registrations.new_password'), class: "form-control", required: true, input_html: { autocomplete: "new-password" }
      .form-group.mb-40
        %label.control-label.input-label{ for: "confirmPassword"}
          = I18n.t('devise.registrations.confirm_password')
        = f.input :password_confirmation, placeholder: I18n.t('devise.registrations.confirm_password'), required: true, type: "password", class: "form-control", input_html: { autocomplete: "new-password" }
      .general-text-align
        = f.button :submit, I18n.t('devise.registrations.save'), class:"btn btn-default mb-10"
  .col-sm-12
    %p.in-gold-500.font-18.mb-25
      = I18n.t('devise.registrations.remove_account')
    = simple_form_for(current_user, url: user_registration_path, html: { method: :delete, id: 'delete_account_form' } ) do |f|
      .general-settings-btn
        = f.button :submit, class: 'btn btn-default disabled mb-20 delete-button', value: I18n.t('devise.registrations.please_remove_account'), disabled: true, id: 'delete_account_btn'
      .form-group.checkbox.general-settings-checkbox
        %label.checkbox-label
          %input.checkbox-input{type: "checkbox", hidden: "true"}
          %span.checkbox-icon
            %i.fa.fa-check
          %span.checkbox-text
            = I18n.t('devise.registrations.all_data_lost')
